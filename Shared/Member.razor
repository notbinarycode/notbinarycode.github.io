@using ToplapLisbon.Pages
@using System.Reflection.Metadata
@using System.Globalization
@namespace ToplapLisbon.Shared

<center>
    <MudLink Href="@Link">
        <MudText>@Name</MudText>
        <MudImage Src="@Picture" Style="width:400px; height:400px;"/>
    </MudLink>
</center>


@code {
    [Parameter]
    public string Name { get; set; }
    [Parameter]
    public string Picture { get; set; }
    [Parameter]
    public string Link { get; set; }
}