        Style="background:#0000; min-height: 100vh; height: 100vh; min-width: 100vw; width: 100vw; overflow-x: hidden; overflow-y: scroll;">
        @* <MudText Typo="Typo.h6"> *@
        @*     notbinarycode *@
        @* </MudText> *@
        @* <NavMenu @ref="@NavMenu"/> *@

        <!--<script src="scripts/p5.js"></script>-->

        <video style="position:absolute; z-index: -4" width="100%" height="100%" autoplay>
            <source src="videos/notbinarycode.mp4" type="video/mp4">
